{
  "name": "com.calorieai.app",
  "displayName": "CalorieAI",
  "version": "1.0.0",
  "description": "CalorieAI Cordova Android project",
  "main": "index.js",
  "scripts": {
    "prebuild": "node -e \"process.exit(0)\"",
    "build:debug": "powershell -ExecutionPolicy Bypass -File ./build-apk.ps1 && echo Built debug APK",
    "build:release": "powershell -ExecutionPolicy Bypass -File ./build-apk.ps1 && echo Built release APK",
    "android:debug": "npx cordova build android --debug",
    "android:release": "npx cordova build android --release",
    "android:run": "npx cordova run android",
    "android:requirements": "npx cordova requirements android",
    "clean": "npx cordova platform remove android && npx cordova platform add android"
  },
  "keywords": [
    "ecosystem:cordova"
  ],
  "author": "Apache Cordova Team",
  "license": "Apache-2.0",
  "devDependencies": {
    "cordova": "^12.0.0",
    "cordova-android": "^14.0.1",
    "cordova-plugin-android-permissions": "^1.1.5",
    "cordova-plugin-device": "^3.0.0",
    "cordova-plugin-file": "^8.1.3"
  },
  "cordova": {
    "platforms": [
      "android"
    ],
    "plugins": {
      "cordova-plugin-android-permissions": {},
      "cordova-plugin-file": {},
      "cordova-plugin-device": {},
      "cordova-plugin-aac-recorder": {
        "SPEC": "./plugins/cordova-plugin-aac-recorder"
      }
    }
  },
  "dependencies": {}
}