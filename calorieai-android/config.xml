<?xml version='1.0' encoding='utf-8'?>
<widget id="com.calorieai.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CalorieAI</name>
    <description>AI-Powered Calorie Tracking - Voice-controlled food intake logging with AI transcription</description>
    <author email="dev@calorieai.com" href="https://calorieai.com">
        CalorieAI Team
    </author>
    <content src="index.html" />
    
    <!-- Android-specific Preferences -->
    <platform name="android">
        <preference name="android-minSdkVersion" value="24" />
        <preference name="android-targetSdkVersion" value="35" />
        <preference name="AndroidPersistentFileLocation" value="Internal" />
        <preference name="AndroidLaunchMode" value="singleTop" />
        <preference name="SplashScreenDelay" value="3000" />
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="SplashShowOnlyFirstTime" value="false" />
        <preference name="FadeSplashScreen" value="true" />
        <preference name="FadeSplashScreenDuration" value="300" />
    </platform>
    
    <!-- Allow network access -->
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <!-- Android specific intents and permissions -->
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    
    <!-- Content Security Policy -->
    <access origin="*" />
    <allow-navigation href="*" />

    <!-- Required Cordova Plugins -->
    <plugin name="cordova-plugin-android-permissions" spec="^1.1.5" />
    <plugin name="cordova-plugin-file" spec="^8.0.0" />
    <plugin name="cordova-plugin-aac-recorder" spec="file:local-plugins/cordova-plugin-aac-recorder" />
</widget>